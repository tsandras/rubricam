<h1>Listes des Pjs</h1>

<div class="col-md-6">
  <table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @pjs.each do |personnage| %>
    <tr>
      <td><%= "<p><b>#{personnage.nom_publique}</b></p>".html_safe %></td>
      <td><%= simple_format personnage.description_publique %></td>
      <td><%= image_tag("#{personnage.image_lien}", class: 'image-perso') if personnage.image_lien.present? %></td>
    </tr>
  <% end %>
  </table>
</div>
