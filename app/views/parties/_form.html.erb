<%= simple_form_for(@party) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-5">
    <%= f.input :date %>
    <%= f.input :duree, label: "Durée (heure)" %>
    <%= f.input :nom %>
    <%= f.input :description %>
    <%= f.button :submit, "Créer/Editer une partie", class: 'btn btn-success btn-sm' %>
    <%= link_to 'Retour', parties_path, class: 'btn btn-warning btn-sm' %>
  </div>

  <div class="col-md-5">
    <%= f.input :description_publique %>
    <%= f.input :secret, label: "Voulez-vous que ce cette partie soit secrète ?", wrapper_html: {class: 'inline simple-checkbox'} %>
    <%= f.input :image_lien %>
    <%= f.input :xps %>
    <%= f.input :campagne_id, collection: Campagne.all.map{|c| [c.nom, c.id]} %>
    <div class="personnage">
      <label for="search_personnage"> Rechercher personnage :</label>
      <input id="search_personnage" type="text" onkeypress="filter(this, '.personnage .checkbox .check_boxes')" onkeyup="epurationCheckBox(this, '.personnage .checkbox .check_boxes')">
      <%= f.association(:personnages, as: :check_boxes, :collection => Personnage.all.map {|c| [c.nom, c.id]}.uniq, wrapper_html: { class: 'col-md-12' }) %>
    </div>
    <%= f.input :notes %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    manageCheckBox("#search_personnage", ".personnage .checkbox .check_boxes");
  });
</script>
