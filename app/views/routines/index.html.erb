<h1>Listing routines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Foci</th>
    <th>Combinaison</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routines.each do |routine| %>
  <tr>
    <td><%= routine.name %></td>
    <td><%= routine.description %></td>
    <td><%= routine.foci %></td>
    <td><%= routine.combinaison %></td>
    <td><%= routine.type %></td>
    <td><%= link_to 'Show', routine %></td>
    <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
    <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

