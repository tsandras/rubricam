<%= simple_form_for(@capacite) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-5">
    <%= f.input :nom %>
    <%= f.input :description %>
    <%= f.input :primaire, label: "Voulez-vous que cette capacité soit primaire ?", wrapper_html: {class: 'inline simple-checkbox'} %>
    <%= f.input :type_cap, collection: Capacite::TYPE_CAPACITE %>
  </div>

  <div class="col-md-5">
    <%= f.button :submit, "Créer/Editer la capacité", class: "btn btn-success btn-sm" %>
    <%= link_to "Retour", capacites_path, class: "btn btn-warning btn-sm" %>
  </div>
<% end %>
