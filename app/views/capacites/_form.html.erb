<%= simple_form_for(@capacite) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :description %>
    <%= f.input :primaire %>
    <%= f.input :type_cap, collection: Capacite::TYPE_CAPACITE %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
