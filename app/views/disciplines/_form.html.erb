<%= simple_form_for(@discipline) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :description %>
    <%= f.input :nom_discipline %>
  </div>

  <div class="discipline">
  <label for="search_discipline"> Rechercher niveau discipline :</label>
  <input id="search_discipline" type="text" onkeypress="filter(this, '.discipline .checkbox .check_boxes')" onkeyup="epurationCheckBox(this, '.discipline .checkbox .check_boxes')">
  <%= f.association(:nivdisciplines, as: :check_boxes, :collection => Nivdiscipline.all.map {|c| [c.nom, c.id]}.uniq, wrapper_html: { class: 'col-md-12' }) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    manageCheckBox("#search_discipline", ".discipline .checkbox .check_boxes");
  });
</script>
