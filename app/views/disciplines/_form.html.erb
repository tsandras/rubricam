<%= simple_form_for(@discipline) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :description %>
    <%= f.input :niveau %>
    <%= f.input :nom_discipline %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
