<h1>Listes des atouts</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Description</th>
    <th>Cout</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @atouts.each do |atout| %>
  <tr>
    <td><%= atout.nom %></td>
    <td><%= atout.description %></td>
    <td><%= atout.cout %></td>
    <td><%= link_to 'Show', atout %></td>
    <td><%= link_to 'Edit', edit_atout_path(atout) %></td>
    <td><%= link_to 'Destroy', atout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nouvel atout', new_atout_path, class: 'btn btn-success btn-sm' %>
<%= link_to 'Retour', root_url, class: 'btn btn-warning btn-sm' %>
