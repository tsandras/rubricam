            <tr>
              <td><%= link_to discipline.nom, discipline %></td>
              <td><%= content_tag :span, discipline.source, class: "label label-danger" %><%= label_secret(discipline) %></td>
              <td><%= link_to 'Voir', discipline_path(discipline), class: 'btn btn-success btn-xs' %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        Il n'y a pas de disciplines.
      <% end %>
    </div>
    <div class="menu-accueil-action">
      <%= link_to 'Tous les disciplines', disciplines_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>