<h1></h1>
<p id="notice"><%= notice %></p>
<div class="col-md-6">
  <div id="menu-personnages" class="menu-accueil">
    <div class="menu-accueil-head">
      Vos 10 derniers personnages
    </div>
    <div class="menu-accueil-body">
      <% if @personnages != nil %>
        <table>
          <tr>
            <th>Personnage</th>
            <th>Appartenance</th>
            <th>Rang</th>
            <th>Voir</th>
          </tr>
          <% @personnages.each do |p| %>
            <tr>
              <td><%= "#{p.prenom} #{p.nom}" %></td>
              <td style="text-align: center;"><span class="wod"><%= Personnage::FONT_WOD[p.appartenance_perso] %></span></td>
              <td><%= label_rang(p) %></td>
              <td><%= link_to "Profil", p, class: 'btn btn-success btn-xs' %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        Vous n'avez pas de personnages.
      <% end %>
    </div>
    <div class="menu-accueil-action">
      <%= link_to 'Tous vos personnages', personnages_path, class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Créer un personnage', new_personnage_path, class: 'btn btn-success btn-sm' %>
    </div>
  </div>
  <div id="menu-personnages" class="menu-accueil">
    <div class="menu-accueil-head">
      10 dernières capacités
    </div>
    <div class="menu-accueil-body">
      <% if @capacites != nil %>
        <table>
          <tr>
            <th>Nom</th>
            <th>Etiquettes</th>
            <th>Voir</th>
          </tr>
          <% @capacites.each do |capacite| %>
            <tr>
              <td><%= link_to capacite.nom, capacite %></td>
              <td>
                <%= content_tag :span, capacite.source, class: "label label-danger" %><%= content_tag :span, capacite.type_cap, class: 'label label-info' %><%= content_tag :span, capacite.primaire ? 'Primaire' : 'Secondaire', class: 'label label-default' %>
              </td>
              <td><%= link_to 'Voir', capacite_path(capacite), class: 'btn btn-success btn-xs' %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        Il n'y a pas de capacités.
      <% end %>
    </div>
    <div class="menu-accueil-action">
      <%= link_to 'Toutes les capacités', capacites_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
  <div id="menu-personnages" class="menu-accueil">
    <div class="menu-accueil-head">
      10 derniers historiques
    </div>
    <div class="menu-accueil-body">
      <% if @historiques != nil %>
        <table>
          <tr>
            <th>Nom</th>
            <th>Etiquettes</th>
            <th>Voir</th>
          </tr>
          <% @historiques.each do |historique| %>
            <tr>
              <td><%= link_to historique.nom, historique %></td>
              <td>
                <%= content_tag :span, historique.source, class: "label label-danger" %><%= content_tag :span, 'Détail', class: 'label label-info' if historique.has_detail %>
              </td>
              <td><%= link_to 'Voir', historique_path(historique), class: 'btn btn-success btn-xs' %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        Il n'y a d'historiques.
      <% end %>
    </div>
    <div class="menu-accueil-action">
      <%= link_to 'Toutes les capacités', historiques_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>

<div class="col-md-6">
  <div id="menu-personnages" class="menu-accueil">
