<%= simple_form_for(@sphere) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :specialite %>
    <%= f.input :description %>
    <%= f.input :niveau %>
    <%= f.input :personnage_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
