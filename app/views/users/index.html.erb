<h1>Listes des utilisateurs</h1>
<div class="col-md-10">
<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Voir', user_path(user), class: 'btn btn-success btn-xs' %></td>
    <td><%= link_to('Editer', edit_user_path(user), class: 'btn btn-warning btn-xs') %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Retour', root_url, class: 'btn btn-warning btn-sm' %>

</div>
